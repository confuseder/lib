<columns padding-bottom="10px">
  <let :value="2" />
  <let :checked="false" />
  <flexbox>1</flexbox>
  <flexbox #animate:click="value(100),1000">{{ value }}</flexbox>
  <flexbox>{{ checked }}</flexbox>
  <rows>
    <flexbox>
      <code language="js">xxx</code>
    </flexbox>
    <flexbox>1</flexbox>
    <flexbox>
      <input model="value"/>
      <checkbox model="checked"/>
    </flexbox>
  </rows>
</columns>

<!-- 测试水平布局表格 -->
<table caption="水平布局测试" align="horizon" columns="3">
  <block>1</block>
  <block>2</block>
  <block>3</block>
  <block>4</block>
  <canvas :width="100" :height="200"></canvas>
</table>

<!-- 测试垂直布局表格 -->
<table caption="垂直布局测试" align="vertical" rows="3">
  <block>A1</block>
  <block>A2</block>
  <block>A3</block>
  <block>B1</block>
  <block>B2</block>
  <block>B3</block>
</table>